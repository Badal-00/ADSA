import java.util.Scanner;

class MaxInRotatedArray {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter number of elements: ");
        int n = sc.nextInt();

        int[] arr = new int[n];
        System.out.println("Enter elements of rotated sorted array:");
        for (int i = 0; i < n; i++) {
            arr[i] = sc.nextInt();
        }

        int low = 0, high = n - 1;

        // If array is not rotated
        if (arr[low] <= arr[high]) {
            System.out.println("Maximum element = " + arr[high]);
            System.out.println("Index = " + high);
            return;
        }

        while (low <= high) {
            int mid = (low + high) / 2;

            // Check if mid is maximum
            if (mid < n - 1 && arr[mid] > arr[mid + 1]) {
                System.out.println("Maximum element = " + arr[mid]);
                System.out.println("Index = " + mid);
                return;
            }

            // Left half is sorted, max lies in right half
            if (arr[low] <= arr[mid]) {
                low = mid + 1;
            }
            // Right half is sorted, max lies in left half
            else {
                high = mid - 1;
            }
        }
    }
}
